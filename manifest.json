{
  "author": "Dima PM",
  "manifest_version": 2,
  "name": "Copy By Select",
  "version": "0.2",
  "description": "Copies text to clipboard after it was selected.",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "all_frames": true,
      "js": [ "content.js" ]
    }
  ],
  "permissions": [ "clipboardWrite", "notifications" ]
}
